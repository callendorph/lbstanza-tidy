defpackage tidy/Language :
  import core
  import tidy/Utils

extern tidySetLanguage : (ptr<byte>) -> int
extern tidyGetLanguage : () -> ptr<byte>


public lostanza defn set-language (langCode:ref<String>) -> ref<True|False> :
  val ret = call-c tidySetLanguage(addr!(langCode.chars))
  return to-bool(ret)

public lostanza defn get-language () -> ref<String> :
  val ret = call-c tidyGetLanguage()
  return String(ret)
